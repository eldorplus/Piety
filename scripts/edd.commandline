#!/usr/bin/env python
"""
edd.commandline - Run an edd display editor session, wrap edd in CommandLine
"""

import edd, commandline

eddc = commandline.CommandLine(prompt='',  handler=edd.cmd)

def main():
    edd.ed.quit = False # previous exit have made it True
    edd.init_display()
    while not edd.ed.quit:
        command = raw_input(eddc.prompt)
        eddc.reader(command) # exit() sets psysh.pexit = True, forces exit
    edd.restore_display()
 
if __name__ == '__main__':
    main()
